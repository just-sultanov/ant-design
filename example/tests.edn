#kaocha/v1
  {:plugins        [:kaocha.plugin/cloverage
                    :kaocha.plugin.alpha/info
                    :kaocha.plugin/profiling
                    :kaocha.plugin/print-invocations
                    :kaocha.plugin/hooks
                    :kaocha.plugin/notifier]

   :tests          [{:id           :unit
                     :source-paths ["src/main/clj"]
                     :test-paths   ["src/test/clj"]
                     :focus-meta   [:unit]}]

   :cloverage/opts {:output           "target/coverage"
                    :ns-regex         []
                    :ns-exclude-regex []
                    :fail-threshold   0
                    :low-watermark    50
                    :high-watermark   80
                    :summary?         true
                    :text?            false
                    :emma-xml?        false
                    :html?            true
                    :nop?             false
                    :lcov?            false
                    :coveralls?       false
                    :codecov?         true}}
