<configuration debug="false" scan="true" scanPeriod="30 seconds">

    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>log/app-%d{yyyy-MM-dd}.%i.log.zip</fileNamePattern>
            <!-- each file should be at most 100MB, keep 60 days worth of history, but at most 20GB -->
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>{ :time #inst "%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}", :msg %msg, :host "${HOSTNAME}", :level "%level",
                :logger "%logger{36}" }%n
            </pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level - %msg [%thread] %logger{36}%n</pattern>
            <!-- <pattern>{ :time #inst "%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}", :msg %msg, :host "${HOSTNAME}", :level "%level", :logger "%logger{36}"}%n</pattern> -->
        </encoder>
    </appender>

    <logger name="app" level="DEBUG"/>

    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
